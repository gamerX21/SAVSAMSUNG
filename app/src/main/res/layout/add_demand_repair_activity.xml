<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".activities.service.AddDemandRepair">
    <View
        android:id="@+id/view3"
        android:layout_width="300dp"
        android:layout_height="460dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="70dp"
        android:background="@color/cardview_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="460dp"
        android:layout_marginTop="27dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3">
        <LinearLayout
            android:layout_width="230dp"
            android:layout_gravity="center"

            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ajouter une Demande"
                android:fontFamily="@font/baumans"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textAlignment="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_gravity="center"

            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/RepairDemandTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input_creative" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_gravity="center"

            android:layout_height="45dp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/RepairDemandVilleSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input_creative" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:fontFamily="@font/baumans"
                android:id="@+id/AddRepairAdresse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input_creative"
                android:gravity="center"
                android:hint="adresse"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="15dp"
                android:textStyle="normal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:fontFamily="@font/baumans"
                android:id="@+id/AddRepairPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input_creative"
                android:gravity="center"
                android:hint="numÃ©ro de telephone"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="15dp"
                android:textStyle="normal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:orientation="vertical">

           <Button
               android:id="@+id/AddRepairBtn"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/custom_btn_creative"
               android:text="ajouter votre demande"
               android:textAllCaps="false"
               android:fontFamily="@font/baumans"
               android:textSize="18sp"
               android:textColor="@color/cardview_main"></Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>