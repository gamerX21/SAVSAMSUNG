<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_margin="30dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/cardview_main"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Type de demande Réparation"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_gravity="center"

                android:fontFamily="@font/baumans"></TextView>
            <TextView
                android:id="@+id/TypeRepair"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Type"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/baumans"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/serviceType"
                android:layout_width="200dp"
                android:layout_height="38dp"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:gravity="center"
                android:text="etat de réparation"
                android:textColor="@color/cardview_main"
                android:textSize="22sp" />
            <TextView
                android:textAlignment="center"
                android:id="@+id/EtatRepair"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/baumans"
                android:gravity="center"
                android:text="status"
                android:textColor="@color/cardview_main"
                android:textSize="22sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/DateRepair"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="date"
            android:textAlignment="center"
            android:textColor="#2d2d2d"
            android:fontFamily="@font/baumans"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"></TextView>
        <Button
            android:id="@+id/DeclineDemandBtn"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/card_view_btn"
            android:text="Annuler Demande"
            android:fontFamily="@font/baumans"
            android:textColor="#fff"></Button>

    </LinearLayout>

</androidx.cardview.widget.CardView>