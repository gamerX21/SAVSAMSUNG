<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical">

    <View
        android:id="@+id/view3"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/view_card_car_agency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="280dp"
        android:layout_marginTop="27dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/articleImg"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:src="@drawable/lavelinge" />

    <TextView
        android:fontFamily="@font/baumans"
        android:id="@+id/articleNom"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="Lave-Linge"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="20dp"
        android:textColor="#000"
        android:textSize="20sp" />


    <TextView
        android:layout_marginTop="12dp"
        android:fontFamily="@font/baumans"
        android:id="@+id/articleDesc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="L'entretien de votre lave-linge avec toute l'expertise de notre techniciens Bosch"
        android:textAlignment="center"
        android:textSize="18sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textStyle="bold" />
        <Button
            android:id="@+id/infoArticleBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:drawableTop="@android:drawable/ic_dialog_info"
            android:padding="9.5dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            android:textColor="#fff" />
    <Button
        android:fontFamily="@font/baumans"
        android:textAllCaps="false"
        android:id="@+id/articleBtn"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:background="@drawable/custom_main_button"
        android:text="ca depend de service"
        android:textColor="#fff" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>