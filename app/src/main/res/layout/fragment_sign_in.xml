<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    tools:context=".fragments.signin.SignInFrag">
    <View
        android:background="@drawable/bgsav"
        android:layout_width="match_parent"
        android:layout_height="550dp"></View>

    <LinearLayout
        android:background="@drawable/bgmaskp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Connectez-Vous"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:fontFamily="@font/baumans"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Vous permet d'en savoir plus sur votre électroménager"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="@font/baumans"/>

        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <EditText
                android:layout_marginBottom="25dp"
                android:id="@+id/emailSignUp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_creative"
                android:textColor="#fff"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:ems="10"
                android:inputType="text"
                android:hint="email"
                android:textColorHint="#fff"/>

            <EditText
                android:id="@+id/pwdSignIn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_creative"
                android:textColor="#fff"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="mote de passe"
                android:textColorHint="#fff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-60dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:textAlignment="textStart"
                android:id="@+id/SignUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baumans"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="créer un compte" />
            <Button
                android:textAllCaps="false"
                android:textAlignment="textEnd"
                android:background="@android:color/transparent"
                android:id="@+id/forgotPwdBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baumans"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="oublier mote de passe?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/SignInNrmlBtn"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn_creative"
                android:layout_height="50dp"
                android:text="se connecter"
                android:textAllCaps="false"
                android:textColor="@color/cardview_main"
                android:fontFamily="@font/baumans"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="or"
                android:textSize="25sp"
                android:textColor="#fff"
                android:fontFamily="@font/baumans"
                android:gravity="center"></TextView>

            <Button

                android:id="@+id/sign_in_button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn_creative"
                android:drawableLeft="@drawable/googlelogo"
                android:drawablePadding="10dp"
                android:fontFamily="@font/baumans"
                android:paddingRight="25dp"
                android:text="connectez-vous avec google"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/cardview_main"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>