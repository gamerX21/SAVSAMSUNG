<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:layout_height="match_parent"
    tools:context=".activities.signup.SignUp">
    <View
        android:background="@drawable/bgsav"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        tools:ignore="MissingConstraints"></View>

    <LinearLayout
        android:background="@drawable/bgmaskp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="crée un compte"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:fontFamily="@font/baumans"/>


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <EditText
                android:layout_marginBottom="25dp"
                android:id="@+id/fullname"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_creative"
                android:textColor="#fff"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:ems="10"
                android:inputType="text"
                android:hint="nom et prénom"
                android:textColorHint="#fff"/>

            <EditText
                android:layout_marginBottom="25dp"
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_creative"
                android:textColor="#fff"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="email"
                android:textColorHint="#fff"/>

            <EditText
                android:layout_marginBottom="25dp"
                android:id="@+id/adresse"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_creative"
                android:textColor="#fff"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:ems="10"
                android:inputType="text"
                android:hint="adresse"
                android:textColorHint="#fff"/>
            <EditText
                android:layout_marginBottom="25dp"
                android:id="@+id/tel"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_creative"
                android:textColor="#fff"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:ems="10"
                android:inputType="number"
                android:hint="numéro de télephone"
                android:textColorHint="#fff"/>

            <EditText
                android:id="@+id/pwd"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_creative"
                android:textColor="#fff"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="password"
                android:textColorHint="#fff"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/SignUpBtn"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn_creative"
                android:layout_height="50dp"
                android:text="crée un compte"
                android:textAllCaps="false"
                android:textColor="@color/cardview_main"
                android:fontFamily="@font/baumans"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>