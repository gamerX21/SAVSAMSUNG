<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.store.Store">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/listStoreBtn"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_creative"
            android:src="@drawable/listcc" />

        <ImageButton
            android:id="@+id/CmdStoreBtn"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_creative"
            android:src="@drawable/order" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/custom_btn_creative"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@drawable/waterpump" />
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Piéces Détachées"
                    android:textColor="@color/cardview_main"
                    android:fontFamily="@font/baumans"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/PartsFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </FrameLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/custom_btn_creative"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cleaningn" />
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:id="@+id/tsextView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Produits De Nettoyage"
                    android:textColor="@color/cardview_main"
                    android:fontFamily="@font/baumans"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/NettoyageFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/custom_btn_creative"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@drawable/purse" />
                <TextView

                    android:layout_gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:id="@+id/tsextViesw4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="accessoires"
                    android:textColor="@color/cardview_main"
                    android:fontFamily="@font/baumans"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/AccesoirsFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>