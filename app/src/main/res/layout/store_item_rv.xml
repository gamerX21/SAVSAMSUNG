<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity=""
    android:layout_width="300dp"
    android:layout_height="280dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/CardVStore"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="230dp"
        android:layout_height="260dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/cardview_main"
            android:orientation="vertical">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/produitImg"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/listre"
                android:layout_gravity="center"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/produitNom"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:textAlignment="center"
                android:fontFamily="@font/baumans"
                android:gravity="center"
                android:text="nom du produit"
                android:textColor="@color/cardview_main"
                android:textSize="18sp" />
            <TextView
                android:textAlignment="center"
                android:id="@+id/produitPrix"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/baumans"
                android:gravity="center"
                android:text="500"
                android:textColor="#2c2c2c"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="150dp"
            android:id="@+id/produitType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="type de produit"
            android:textAlignment="center"
            android:textColor="#2d2d2d"
            android:fontFamily="@font/baumans"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"></TextView>
        <Button
            android:id="@+id/CommanderBtn"
            android:layout_marginTop="90dp"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/card_view_btn"
            android:text="Commander"
            android:fontFamily="@font/baumans"
            android:textColor="#fff"></Button>

    </androidx.cardview.widget.CardView>

</LinearLayout>